{
  "id": "zqy-formatAndSave",
  "name": "formatAndSave",
  "description": "功能1：一键格式化保存，功能2：开启关闭双分栏模式且自动折叠",
  "displayName": "formatAndSave",
  "version": "0.0.2",
  "publisher": "zqy",
  "engines": {
    "HBuilderX": "^2.7.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension",
  "activationEvents": [
    "onCommand:extension.formatAndSave",
    "onCommand:extension.copyEditorAutoFold"
  ],
  "contributes": {
    "commands": [{
      "command": "extension.formatAndSave",
      "title": "format and save"
    }, {
      "command": "extension.copyEditorAutoFold",
      "title": "copy editor and auto fold"
    }],
    "menus": {
      "editor/context": [{
          "command": "extension.formatAndSave",
          "group": "z_commands",
          "when": "editorTextFocus"
        },
        {
          "command": "extension.copyEditorAutoFold",
          "group": "z_commands",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [{
      "command": "extension.formatAndSave",
      "key": "Ctrl+S",
      "when": "editorTextFocus"
    }, {
      "command": "extension.copyEditorAutoFold",
      "key": "Ctrl+K",
      "when": "editorTextFocus"
    }],
    "configuration": {
      "title": "formatAndSave",
      "properties": {
        "formatAndSave.mode": {
          "type": "boolean",
          "default": true,
          "description": "控制分栏的折叠展开模式,勾选则左侧只折叠script,右侧只展开script;不勾选则相反"
        }
      }
    }
  },
  "extensionDependencies": [
    "plugin-manager"
  ],
  "dependencies": {}
}
